<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90B6F9"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Rétegzett konténer a térkép + lakat gomb számára -->
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Lakat gomb (ImageButton – nincs Material háttér felülírás) -->
            <ImageButton
                android:id="@+id/lockButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/selector_lock_background"
                android:src="@drawable/ic_lock_closed"
                android:scaleType="centerInside"
                android:contentDescription="@string/lock_button_desc"
                android:padding="0dp"
                android:elevation="10dp" />

            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_account_circle"
                android:src="@drawable/ic_account"
                android:scaleType="centerInside"
                android:contentDescription="@string/account_button_desc"
                android:elevation="10dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/custom_bubble"
        layout="@layout/custom_info_window"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="BICYCLE STORAGE"
            android:backgroundTint="#4282F5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/action_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="MY LOCATION"
            android:backgroundTint="#4282F5"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>