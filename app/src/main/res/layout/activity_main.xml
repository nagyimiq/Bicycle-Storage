<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90B6F9"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Rétegzett konténer a térkép + lebegő gombok számára -->
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Bal alsó: Bicycle Storage ikon gomb (bicycle.png) -->
            <ImageButton
                android:id="@+id/storageButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:background="@drawable/bg_circle_primary"
                android:src="@drawable/bicycle"
                android:scaleType="centerInside"
                android:elevation="10dp"
                android:padding="12dp" />

            <!-- Jobb alsó: Lakat gomb – marad a PIROS/ZÖLD váltás selectorral -->
            <ImageButton
                android:id="@+id/lockButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/selector_lock_background"
                android:src="@drawable/ic_lock_closed"
                android:scaleType="centerInside"
                android:contentDescription="@string/lock_button_desc"
                android:padding="0dp"
                android:elevation="10dp" />

            <!-- Jobb felső: Account gomb -->
            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="top"
                android:layout_margin="16dp"
                android:background="@drawable/bg_account_circle"
                android:src="@drawable/ic_account"
                android:scaleType="centerInside"
                android:contentDescription="@string/account_button_desc"
                android:elevation="10dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Egyedi info ablak (ha használod), marad -->
    <include
        android:id="@+id/custom_bubble"
        layout="@layout/custom_info_window"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>